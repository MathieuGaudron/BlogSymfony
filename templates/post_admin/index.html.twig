{% extends 'base.html.twig' %}

{% block title %}Admin - Articles{% endblock %}

{% block body %}
<div class="auth-bg">
  <div class="admin-wrap">
    <div class="admin-head">
      <h1 class="admin-title">Gestion des posts</h1>
      <a class="btn-auth admin-btn" href="{{ path('admin_posts_new') }}">+ Ajouter un post</a>
    </div>

    <div class="admin-sep"></div>

    {% for post in posts %}
      <div class="admin-card">
        <strong class="admin-card-title">{{ post.title }}</strong>

        <div class="admin-actions">
          <a class="admin-link" href="{{ path('admin_posts_edit', {id: post.id}) }}">Modifier</a>

          <form method="post" action="{{ path('admin_posts_delete', {id: post.id}) }}">
            <input type="hidden" name="_token" value="{{ csrf_token('delete_post_' ~ post.id) }}">
            <button class="admin-btn-danger" type="submit" onclick="return confirm('Supprimer cet article ?')">
              Supprimer
            </button>
          </form>
        </div>
      </div>
    {% else %}
      <p class="admin-empty">Aucun post.</p>
    {% endfor %}

    <a class="admin-back" href="{{ path('admin_dashboard') }}">‚Üê Retour dashboard</a>
  </div>
</div>
{% endblock %}