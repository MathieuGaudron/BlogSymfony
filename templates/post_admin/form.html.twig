{% extends 'base.html.twig' %}

{% block title %}
  Admin - {{ is_edit ? 'Modifier' : 'Ajouter' }} un post
{% endblock %}

{% block body %}
<div class="auth-bg">
  <div class="admin-wrap">
    <div class="admin-head">
      <h1 class="admin-title">{{ is_edit ? 'Modifier' : 'Ajouter' }} un post</h1>
      <a class="admin-back" href="{{ path('admin_posts_index') }}">← Retour</a>
    </div>

    <div class="admin-sep"></div>

    <div class="admin-form-card">
      {{ form_start(form, { attr: { class: 'admin-form' } }) }}

        <div class="admin-field">
          {{ form_label(form.title, null, { label_attr: { class: 'admin-label' } }) }}
          {{ form_widget(form.title, { attr: { class: 'admin-control', placeholder: 'Titre du post' } }) }}
          {{ form_errors(form.title) }}
        </div>

        <div class="admin-field">
          {{ form_label(form.content, null, { label_attr: { class: 'admin-label' } }) }}
          {{ form_widget(form.content, { attr: { class: 'admin-control admin-control--textarea', placeholder: 'Écris ton contenu...' } }) }}
          {{ form_errors(form.content) }}
        </div>

        {{ form_rest(form) }}

        <div class="admin-form-actions">
          <button class="btn-auth admin-submit" type="submit">
            {{ is_edit ? 'Enregistrer' : 'Créer' }}
          </button>
        </div>

      {{ form_end(form) }}
    </div>
  </div>
</div>
{% endblock %}