{% extends 'base.html.twig' %}

{% block title %}Dashboard admin{% endblock %}

{% block body %}
<div class="auth-bg py-5">
  <div class="container">
    <div class="auth-card shadow-lg">
      <div class="p-4 p-md-5">
        <h1 class="auth-title h3 mb-2">Dashboard Admin</h1>
        <p class="auth-label mb-4">Bienvenue, {{ app.user.firstName }}.</p>

        <div class="d-grid gap-2">
          <a class="btn btn-auth" href="{{ path('admin_users_index') }}">Gérer les utilisateurs</a>
          <a class="btn btn-auth" href="{{ path('admin_posts_index') }}">Gérer les posts</a>
          <a class="btn btn-auth" href="{{ path('admin_categories_index') }}">Gérer les catégories</a>
        </div>

        <div class="mt-4">
          <a class="auth-link" href="{{ path('app_profile') }}">← Retour profil</a>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
