{% extends 'base.html.twig' %}

{% block title %}Mes infos{% endblock %}

{% block body %}
<div class="auth-bg">
  <div class="admin-wrap">

    <div class="home-head">
      <h1 class="home-title">Mes infos</h1>
    </div>

    <div class="admin-sep"></div>

    <div class="post-card">
      <div class="post-head">
        <h2 class="post-title">Informations du compte</h2>
        <div class="post-meta">
          {% if is_granted('ROLE_ADMIN') %}
            <span>Admin</span>
          {% else %}
            <span>Utilisateur</span>
          {% endif %}
        </div>
      </div>

      <div class="comment">
        <div class="comment-meta">
          <span>Prénom</span>
        </div>
        <div class="comment-text">{{ user.firstName }}</div>
      </div>

      <div class="comment">
        <div class="comment-meta">
          <span>Nom</span>
        </div>
        <div class="comment-text">{{ user.lastName }}</div>
      </div>

      <div class="comment">
        <div class="comment-meta">
          <span>Email</span>
        </div>
        <div class="comment-text">{{ user.email }}</div>
      </div>

      <div class="comment">
        <div class="comment-meta">
          <span>Rôles</span>
        </div>
        <div class="comment-text">
          {{ user.roles ? user.roles|join(', ') : '' }}
        </div>
      </div>
    </div>

    <div class="mt-4">
      <a class="admin-link" href="{{ path('app_profile') }}">← Retour profil</a>
    </div>

  </div>
</div>
{% endblock %}