{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}


<div class="auth-bg d-flex align-items-center py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-7 col-lg-5">
        <div class="auth-card shadow-lg">
          <div class="p-4 p-md-5">

            {% if error %}
              <div class="alert alert-danger mb-4">
                {{ error.messageKey|trans(error.messageData, 'security') }}
              </div>
            {% endif %}

            <h1 class="auth-title h3 mb-4">Connecte-toi</h1>

            <form method="post" action="{{ path('app_login') }}">
              <div class="mb-3">
                <label class="auth-label form-label" for="inputEmail">Email</label>
                <input type="email"
                       value="{{ last_username }}"
                       name="email"
                       id="inputEmail"
                       class="form-control auth-input"
                       autocomplete="email"
                       required autofocus>
              </div>

              <div class="mb-4">
                <label class="auth-label form-label" for="inputPassword">Mot de passe</label>
                <input type="password"
                       name="password"
                       id="inputPassword"
                       class="form-control auth-input"
                       autocomplete="current-password"
                       required>
              </div>

              <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

              <button class="btn btn-auth" type="submit">Se connecter</button>

              <div class="mt-3 text-center auth-label">
                Pas de compte ?
                <a class="auth-link" href="{{ path('app_register') }}">Inscris-toi</a>
              </div>
            </form>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
