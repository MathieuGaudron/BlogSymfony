{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div style="max-width:520px;margin:60px auto;">
  <h1>Inscription</h1>

  {% for message in app.flashes('error') %}
    <div style="background:#ffdddd;padding:10px;border:1px solid #ffaaaa;margin:10px 0;">
      {{ message }}
    </div>
  {% endfor %}

  {% for message in app.flashes('success') %}
    <div style="background:#ddffdd;padding:10px;border:1px solid #aaffaa;margin:10px 0;">
      {{ message }}
    </div>
  {% endfor %}

  {{ form_start(registrationForm) }}
    <div style="margin-top:12px;">{{ form_row(registrationForm.email) }}</div>
    <div style="margin-top:12px;">{{ form_row(registrationForm.firstName) }}</div>
    <div style="margin-top:12px;">{{ form_row(registrationForm.lastName) }}</div>
    <div style="margin-top:12px;">{{ form_row(registrationForm.plainPassword) }}</div>

    <button type="submit" style="margin-top:16px;width:100%;padding:10px;">
      Créer mon compte
    </button>

    <p style="text-align:center;margin-top:12px;">
      <a href="{{ path('app_login') }}">J’ai déjà un compte</a>
    </p>
  {{ form_end(registrationForm) }}
</div>
{% endblock %}
