{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="auth-bg d-flex align-items-center py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-7 col-lg-5">
        <div class="auth-card shadow-lg">
          <div class="p-4 p-md-5">

            <h1 class="auth-title h3 mb-4">Inscription</h1>

            {% for message in app.flashes('error') %}
              <div class="alert alert-danger mb-3">{{ message }}</div>
            {% endfor %}

            {% for message in app.flashes('success') %}
              <div class="alert alert-success mb-3">{{ message }}</div>
            {% endfor %}

            {{ form_start(registrationForm) }}

              <div class="mb-3">
                <label class="auth-label form-label">Email</label>
                {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control auth-input'}}) }}
                {{ form_errors(registrationForm.email) }}
              </div>

              <div class="mb-3">
                <label class="auth-label form-label">Prénom</label>
                {{ form_widget(registrationForm.firstName, {'attr': {'class': 'form-control auth-input'}}) }}
                {{ form_errors(registrationForm.firstName) }}
              </div>

              <div class="mb-3">
                <label class="auth-label form-label">Nom</label>
                {{ form_widget(registrationForm.lastName, {'attr': {'class': 'form-control auth-input'}}) }}
                {{ form_errors(registrationForm.lastName) }}
              </div>

              <div class="mb-4">
                <label class="auth-label form-label">Mot de passe</label>
                {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control auth-input'}}) }}
                {{ form_errors(registrationForm.plainPassword) }}
              </div>

              <button type="submit" class="btn btn-auth">Créer mon compte</button>

              <div class="mt-3 text-center auth-label">
                Déjà un compte ?
                <a class="auth-link" href="{{ path('app_login') }}">Connecte-toi</a>
              </div>

            {{ form_end(registrationForm) }}

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
